<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/background_material"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_rasp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_rasp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/drawerUsername"
        android:layout_below="@id/img_rasp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/drawerEmail"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_below="@id/drawerUsername"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/drawerUsername"
        android:layout_alignStart="@id/drawerUsername" />



</RelativeLayout>